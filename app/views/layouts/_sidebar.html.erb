<div id="sidebar" >



    <% if current_user %>
      <div class="sidebox">
        <h1 class="clear"><%=h current_user.login%></h1>
        <ul class="sidemenu">
            <li><%= link_to "Profil", account_path, :class => "top" %></li>
            <li><%= link_to "Odhlásenie", user_sessions_path, :method => :delete%></li>
        </ul>
      </div>
    <% else %>

        <% unless defined?(@user_session) %>
          <div class="sidebox">
          <h1>Prihlásenie</h1>
           <% @user_session = UserSession.new %>
            <% form_for @user_session, :url => user_sessions_path do |f| %>
              <%= f.error_messages %>
              <%= f.label :login %>
              <%= f.text_field :login %>
              <%= f.label :password %>
              <%= f.password_field :password %><br /><br />
              <%= f.submit "Login", "class" => "button" %>
            <% end %>
            <p>
            <%= link_to 'Vytvorit Nový účet', new_account_path, :id => "link" %>
            </p>
          </div>
        <%end%>
    <%end%>

    <div class="sidebox">

        <h1 class="clear">Menu</h1>
        <ul class="sidemenu">
            <li><%= /Úvod/i =~ title ? link_to("Domov", root_url, :class => "top", :id => "active") : link_to("Domov", root_url, :class => "top")%></li>
            <li><%= /Poslan/i =~ title ? link_to("Poslanci", deputies_url, :id => "active") : link_to("Poslanci", deputies_url) %></li>
            <li><%= link_to "Návrhy zákonov", statutes_url%></li>
            <li><%= /Hlasovania/i =~ title ? link_to("Hlasovania", votings_url, :id => "active") : link_to("Hlasovania", votings_url)%></li>
        </ul>

    </div>
</div>    