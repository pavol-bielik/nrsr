<h1><%= @statute.statute_type%></h1>

<p>
  <b>Názov:</b>
  <%=h @statute.subject %>
</p>

<p>
  <b>Aktuálny stav:</b>
  <%=h @statute.state %> <%=h @statute.result %>
</p>


<p>
  <b>Dátum doručenia:</b>
  <%=h @statute.date %>
</p>

<% unless @statute.doc.nil? %>
<p>
  <a href="<%=h "http://www.nrsr.sk/" + @statute.doc %>" id="link" >Plné znenie zákona</a>
</p>

<% end %>

<h1>Zoznam hlasovani</h1>

<table>
  <% i = 0 %>
  <tr>
    <th class="first">Dátum</th>
    <th>Názov</th>
  </tr>

<% @votings.each do |voting| %>
  <tr <%= i%2 == 0 ? ' class="row-a"' : 'class="row-b"' %>>
    <td class="first"><%= "#{voting.happened_at.day}.#{voting.happened_at.month}.#{voting.happened_at.year}" %></td>
    <td><%= voting.short_subject.nil? ? voting.subject : voting.short_subject %></td>
    <td><%= link_to 'Info', voting %></td>
  </tr>
  <% i += 1 %>
<% end %>
</table>